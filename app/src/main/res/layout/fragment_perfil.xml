<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/perfilFoto"
                android:layout_width="144dp"
                android:layout_height="135dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:contentDescription="Adicione foto de perfil"
                android:foregroundTint="#00FFFFFF"
                android:src="@drawable/perfil" />

            <TextView
                android:id="@+id/perfilNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_nome"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilNome2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_nome"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilEmail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilDataNascimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_dataNascimento"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilDataNascimento2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_dataNascimento"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_numCelular"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilCelular2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_numCelular"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilSexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="Sexo"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilSexo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="Sexo"
                android:textSize="18sp" />

            <TextView
