                android:text="@string/reg_logradouro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilNumCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_numCasa"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilNumCasa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_numCasa"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilComplemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:text="@string/reg_complemento"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perfilComplemento2"
                android:layout_width="match_parent"
